<!-- kit show -->
<h2>
  <a href="<%= @bag.link %>"><%= @bag.adv %></a><strong> <i>kit</i></strong>
</h2>
<i>
<%= @bag.description %>
</i>
  <a href="<%= bag_path %>/edit">
    <button type="button" class="btn btn-default btn-sm" aria-label="Left Align">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
</a>

<div class="kit-inventory">
  <h3>inventory</h3>
  <% @bag.tools.each do |tool, i| %>
    <tr>
      <!-- not sure why it isn't showing a numbered list here -->
      <td><%= i %>-</td> 
      <td><%= tool.name %></td><br>
    </tr>
  <% end %>
  <p><%= @bag.tools.count %> tools total</p>  
</div>

<%= form_for ([@bag, @bag.tools.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :link %><br>  
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= render 'bags/details' %>

<%= render 'bags/navbtm' %>

