<!-- kit new -->
<h2>create <strong><i>kit</i></strong></h2>
<div class="kit-new-form">
  <%= simple_form_for @bag do |f| %>
    <%= f.label :description, 'describe this kit' %>
    <%= f.input :description, label: false, placeholder: 'discoverying my third eye through fly fishing :P' %>
    <!-- Maybe change to hover over for hints in future -->
    <%= f.label :adv, 'what was the purpose of this kit?' %>
    <!-- Maybe use amazon search of top self help topics for hint? -->
    <%= f.input :adv, required: true, label: false, placeholder: 'better travel, simpler love, less money, better exercise...' %>
    <%= f.label :link, 'link?' %>
    <%= f.input :link, label: false, placeholder: 'reddit.com/r/sailing'%>
    <!-- On click, change text to ty and a happy colour like orange juice -->
    <%= f.button :submit, 'share kit <3' %>
  <% end %>  
</div>

<div class="nav-btm">
  <p>
    <i>
      <%= link_to 'kit exchange', bags_path %> 
    </i> 
    |
    <i>
      <%= link_to 'mykit', welcome_index_path %>  
    </i>
    
  </p>
</div>


