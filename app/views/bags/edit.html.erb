<table>
  <tr>
    <td>
      <h2>repack <strong><i>kit</i></strong></h2>  
    </td> 
  </tr>
  <tr>
    <td>
      <h6>last repacked <%= @bag.updated_at %></h6>
    </td>
  </tr>
</table>

<div class="kit-edit-form">
  <%= simple_form_for @bag do |f| %>
    <%= f.input :adv %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.button :submit, "save" %>
  <% end %> 
  <i> 
    <%= link_to "cancel", bag_path %> 
  </i>
  |
  <i>
    <%= link_to 'delete kit', bag_path(@bag),
                method: :delete,
                data: { confirm: 'are you sure? this is a one way trip...' } %>
  </i>
</div>


<table>
  <tr>
    <th>adv</th>
    <th>desc</th>
    <th>link</th>  
  </tr>
  <tr>
    <td><%= @bag.adv %></td>>
    <td><%= @bag.description %></td>>
    <td><%= @bag.link %></td>>
  </tr>
</table>
<p><i> <%= link_to 'mykit', welcome_index_path %> </i></p>